{
  "name": "codriver-mcp",
  "version": "0.4.0",
  "description": "AI-powered Desktop Automation via MCP. Lets Claude control any desktop application through screenshots, accessibility trees, OCR, and input injection.",
  "author": "Viktor Trncik <viktor@ibt-freiburg.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ViktorTrn/codriver-mcp.git"
  },
  "homepage": "https://github.com/ViktorTrn/codriver-mcp#readme",
  "bugs": {
    "url": "https://github.com/ViktorTrn/codriver-mcp/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "codriver-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "dependencies": {
    "@jitsi/robotjs": "^0.6.21",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "express": "^5.2.1",
    "screenshot-desktop": "^1.15.0",
    "sharp": "^0.33.0",
    "tesseract.js": "^7.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "os": [
    "darwin"
  ],
  "keywords": [
    "mcp",
    "claude",
    "desktop-automation",
    "ui-automation",
    "accessibility",
    "model-context-protocol",
    "screen-capture",
    "ocr",
    "macos",
    "robotjs",
    "ai-agent",
    "anthropic"
  ]
}
